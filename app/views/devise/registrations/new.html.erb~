<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  
  <div><%= f.label :joined_nit_raipur_in %><br />
	<%= f.select(:joined_on, ((Time.now.year-40).to_i..(Time.now.year.to_i)).to_a.reverse) %></div>

  <div><%= f.label :department %><br />
  <%= f.collection_select :department_id, Department.all, :id, :name %></div>
 
	<div><%= f.label :i_am_a_student %><br />
  <%= f.check_box  %></div>

		
	<% @member.build_student if @member.student.nil? %>
	<%= f.fields_for :student do |s| %>
		
		<div><%= s.label :roll_number %><br />
		<%= s.text_field :rollnum %></div>
		
		<div><%= s.label :positions_held %><br />
		<%= s.text_field :positions %></div>
		
		
	<% end %>

	<% @member.build_nstudent if @member.nstudent.nil? %>
	<%= f.fields_for :nstudent do |ns| %>
	
		<div><%= ns.label :title %><br />
		<%= ns.select(:title, %w{ Mr. Ms. Mrs. Dr. Prof. Shri Smt Sir Madam }) %>
		
		<div><%= ns.label :designation %><br />
		<%= ns.select(:designation,
		 %w{ Chairman Director Registrar Dean 
		 HOD Reader Professor Associate-Professor Assistant-Professor
		 Lecturer AWS}) %></div>
		 
		 <div><%= ns.label :designated_to %><br />
		 <%= ns.text_field :designated_to %></div>
		 
		 <div><%= ns.label :qualification %><br />
		 <%= ns.text_field :qualification %></div>
		 
	<% end %>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
