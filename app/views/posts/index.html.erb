<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Points</th>
    <th>Member</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title , post %></td>
    <td><%= post.content %></td>
    <td><%= post.points %></td>
    <td><%= post.member.name %> (<%= post.member.department.name %>)</td>
    <td></td>
    <% if post.member_id = 0 %>
    <% then %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <% end %>
   
    
    <%= if post.member_id = current_member.id && current_member.admin = true %>
    <% then %>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
    
  </tr>
<% end %>
</table>

<br />

